@page
@model HimalayanOnlineHotelBooking.Pages.Hotel.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}
<body>
    <form method="post">
        <div class="titleLogin-Signup">Welcome To</div>
        <div class="titleLogin-Signup">Himalayan Hotel</div>
        <div class="titleLogin-Signup-info">Login Page</div>
        <div class="input-textbox">
            <input asp-for="Username" name="Username" id="Username" placeholder="Username">
            <label asp-for="Username">Username</label>
        </div>
        <div class="input-textbox">
            <input asp-for="Password" name="Password" id="Password" placeholder="Password">
            <label asp-for="Password">Password</label>
        </div>
        @if (!ModelState.IsValid)
        {
            <div class="text-danger">
                <p>Please fix the following errors:</p>
                <ul>
                    @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>

                    }
                </ul>
            </div>
        }
        
        <button type="submit" class="loginbutton">Log In</button>
        <br />
        <span class="txt1">
            Don't have an account?
        </span>
        <a class="txt2" asp-area="" asp-page="/Hotel/Account/Signup">Sign Up Here</a>

      
    </form>
  
</body>





